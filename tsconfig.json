{
    "compileOnSave": true,
    "compilerOptions": {
      "target": "ES5",
      "module": "commonjs",
      "noImplicitAny": true,
      "noEmitOnError": false,
      "removeComments": false,
      "preserveConstEnums": true,
      "strictNullChecks": true,
      "sourceMap": false,
      "experimentalDecorators": true,
      "declaration": true
    },
    "exclude": [
      "node_modules",
      "node_modules/**",
      "node_modules/typescript",
      "node_modules/@types"
    ]
}
